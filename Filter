#ifndef _FILTER_
#define _FILTER_

#include <vector>

namespace DigitalFilter {

    class Filter {
        public:
            virtual ~Filter() {}
            virtual float filterSample(float sample) = 0;
            virtual std::vector<float> filterSamples(std::vector<float> &samples) = 0;
    };

} // namespace DigitalFilter

#endif//_FILTER_
